#            on_press:
#                root.manager.transition.direction = "right"
#                root.manager.transition.duration = 0
#                root.manager.current = "pass"

            Button:
                size: 128, 128
                pos: root.width - 128, 300
                background_normal: './resources/images/quill_inversed.png'
                background_down: './resources/images/quill_inversed.png'
                on_press:
                    root.manager.transition.direction = "up"
                    root.manager.transition.duration = 0.1
                    root.manager.current = "log"

