<QrcodeScreen>
    on_pre_enter: zbarcam.start()
    BoxLayout:
        orientation: 'vertical' # à peut-être enlever ?

        ZBarCam:
            id: zbarcam
            # optional, by default checks all types
            # code_types: ZBarSymbol.QRCODE, ZBarSymbol.EAN13
        Label:
            size_hint: None, None
            size: self.texture_size[0], 50
            text: "qrcode détecté" if(zbarcam.symbols) else ""
#            text: ', '.join([str(symbol.data) for symbol in zbarcam.symbols])

    Widget:
        Button:
            size: 128, 128
            pos: root.width - 128, 10
            background_normal: './resources/images/map.png'
            background_down: './resources/images/map_pressed.png'
            on_press:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 0
                root.manager.current = "main"

# Bouton passScreen
